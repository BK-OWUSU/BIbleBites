<section class="text-gray-400 bg-gray-900 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="-my-8 divide-y-2 divide-gray-800">
        
    <!-- Content for displaying questions -->
    <% questions.forEach(function(quest, i) { %>
      <div class="py-6 flex flex-wrap md:flex-nowrap">
        <div class="md:flex-grow">
          <p class="leading-relaxed"> <%= quest.question %> </p>
          <a id="show-answer_<%= i %>" class="show-answer text-indigo-400 inline-flex items-center mt-4">Show answer
            <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" xmlns="http://www.w3.org/2000/svg">
                <path stroke="currentColor" stroke-width="2" d="M21 12c0 1.2-4.03 6-9 6s-9-4.8-9-6c0-1.2 4.03-6 9-6s9 4.8 9 6Z"/>
                <path stroke="currentColor" stroke-width="2" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
            </svg>
          </a>
          <p class="answer"><b>Answer:</b> <%= quest.answer %></p>
        </div>
      </div>
    <% }); %>
    </div>
    <!-- End -->
  </div>
</section>